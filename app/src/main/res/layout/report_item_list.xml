<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    android:layout_marginStart="@dimen/cardview_compat_inset_shadow"
    android:layout_marginEnd="@dimen/cardview_compat_inset_shadow"
    android:layout_marginBottom="@dimen/cardview_compat_inset_shadow"
    android:outlineAmbientShadowColor="@color/latestBlue"
    android:outlineSpotShadowColor="@color/latestBlue"
    android:padding="4dp"
    app:cardCornerRadius="7dp"
    app:cardElevation="8dp"
    app:layout_constraintTop_toTopOf="parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:id="@+id/ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/latestBlue"
                android:weightSum="1">

                <TextView
                    android:id="@+id/reportIdTv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"
                    android:gravity="start"
                    android:visibility="gone"
                    android:fontFamily="@font/nunito_regular"
                    android:text="Report Id: 7"
                    android:textColor="@android:color/white"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/monthYearTv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_weight="0.6"
                    android:text="December, 2021"
                    android:fontFamily="@font/nunito_regular"
                    android:textColor="@android:color/white"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ll"
                android:orientation="horizontal"
                android:layout_marginStart="5dp"
                android:layout_marginTop="10dp"
                android:weightSum="1">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="0.8"
                    android:textColor="@color/blackToWhite"
                    android:fontFamily="@font/nunito_regular"
                    android:text="Program : "
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/programTv"
                    android:fontFamily="@font/nunito_regular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:textColor="@color/blackToWhite"
                    android:text="M.B.A.(Rural Management /Agribusiness Management)"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ll2"
                android:layout_marginBottom="20dp"
                android:orientation="horizontal"
                android:layout_below="@id/ll1"
                android:layout_marginStart="5dp"
                android:layout_marginTop="10dp"
                android:weightSum="1">

                <TextView
                    android:id="@+id/leaveTv"
                    android:layout_weight="0.5"
                    android:fontFamily="@font/nunito_regular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Leaves Taken : 2"
                    android:textColor="@color/blackToWhite"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/statusTv"
                    android:layout_weight="0.5"
                    android:fontFamily="@font/nunito_regular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/blackToWhite"
                    android:text="Report Status : accept"
                    android:textSize="14sp" />
            </LinearLayout>


        </RelativeLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>
