<?xml version="1.0" encoding="utf-8"?>

<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:layout_marginStart="@dimen/cardview_compat_inset_shadow"
    android:layout_marginEnd="@dimen/cardview_compat_inset_shadow"
    android:layout_marginBottom="@dimen/cardview_compat_inset_shadow"
    android:outlineAmbientShadowColor="@color/latestBlue"
    android:outlineSpotShadowColor="@color/latestBlue"
    android:padding="8dp"
    app:cardCornerRadius="7dp"
    app:cardElevation="8dp"
    app:layout_constraintTop_toTopOf="parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:id="@+id/ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">

                <TextView
                    android:id="@+id/dateTv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nunito_regular"
                    android:padding="4dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_weight="0.8"
                    android:text="DEC\n 26"
                    android:textColor="@color/blackToWhite"
                    android:textSize="16sp" />


                <LinearLayout
                    android:id="@+id/ll1"
                    android:layout_weight="0.2"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/subjectTv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nunito_regular"
                        android:padding="4dp"
                        android:text="Panchayat Raj "
                        android:textColor="@color/blackToWhite"
                        android:textSize="16sp" />

                    <LinearLayout
                        android:id="@+id/ll2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="1"
                        app:layout_constraintTop_toBottomOf="@id/ll">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.6"
                            android:fontFamily="@font/nunito_regular"
                            android:padding="4dp"
                            android:text="Semester"
                            android:textColor="@color/blackToWhite"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/semTv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.4"
                            android:fontFamily="@font/nunito_regular"
                            android:padding="4dp"
                            android:text="2"
                            android:textColor="@color/blackToWhite"
                            android:textSize="14sp" />
                    </LinearLayout>



                    <LinearLayout
                        android:id="@+id/ll3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="1"
                        app:layout_constraintTop_toBottomOf="@id/ll2">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.6"
                            android:fontFamily="@font/nunito_regular"
                            android:padding="4dp"
                            android:text="Time"
                            android:textColor="@color/blackToWhite"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/timeTv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.4"
                            android:fontFamily="@font/nunito_regular"
                            android:padding="4dp"
                            android:text="12:00 pm to 1:00 pm"
                            android:textColor="@color/blackToWhite"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="1"
                        app:layout_constraintTop_toBottomOf="@id/ll3">

                        <TextView
                            android:id="@+id/totalPresentTv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.6"
                            android:fontFamily="@font/nunito_regular"
                            android:padding="4dp"
                            android:text="Total P"
                            android:textColor="@color/blackToWhite"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/totalAbsentATv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.4"
                            android:fontFamily="@font/nunito_regular"
                            android:padding="4dp"
                            android:text="Total A"
                            android:textColor="@color/blackToWhite"
                            android:textSize="14sp" />
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>
